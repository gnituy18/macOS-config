general {
        colors = true
        interval = 5
        color_good = "#d7ff87"
        color_bad = "#ff87af"
        color_degraded = "#ffffff"
}

order += "tztime local"
order += "wireless wlp3s0"
order += "path_exists l2tp"
order += "battery 0"

wireless wlp3s0 {
        format_up = "%essid"
        format_down = "No Wi-Fi"
}

